#include <stdio.h>

int main() {
    int x, y;
    printf("kilkist ryadkiv: ");
    scanf("%d", &x);
    printf("kilkist stovpciv: ");
    scanf("%d", &y);
    int arr[x][y];
    printf("elementy masuvy—É:\n");
    for (int i = 0; i < x; i++) {
        for (int j = 0; j < y; j++) {
            scanf("%d", &arr[i][j]);
        }
    }
    int sum = 0;
    for (int i = 0; i < x; i++) {
        for (int j = 0; j < y; j++) {
            sum += arr[i][j];
        }
    }
    float avg = (float) sum / (x * y);
    printf("seredne aryfmetychne elementiv masuvy: %.2f\n", avg);
    return 0;
}
